{
  "version": 2,
  "cleanUrls": true,
  "headers": [
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "image/png"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/vat/validate",
      "destination": "/api/vat-validate"
    },
    { 
      "source": "/(.*)", 
      "destination": "/index.html" 
    }
  ],
  "functions": {
    "functions/vat-validate/index.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/api/vat-validate",
      "dest": "/functions/vat-validate"
    }
  ]
}
