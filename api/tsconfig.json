{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "outDir": "dist",
    "rootDir": ".",
    "lib": ["es2017"],
    "types": ["node", "@vercel/node"]
  },
  "include": [
    "index.ts",
    "vat/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
